<h1>Missionaries</h1>
<% @users = @users.page(params[:page]).per(24) %>
<div class="text-center"><%= paginate @users %></div>
<div class="row">
  <% @users.each_with_index do |user, index| %>
    <div class="col-sm-3 col-xs-6 margin-top-30">
      <%= link_to user_path(user.username) do %>
        <div><%= image_tag user.image.thumbnail, class: "img-responsive center-block" %></div>
        <div class="text-center"><%= user.name %></div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="text-center"><%= paginate @users %></div>
