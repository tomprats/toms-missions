<div class="row">
  <div class="col-md-3">
    <%= image_tag @user.image.link, class: "img-responsive" if @user.image %>
  </div>
  <div class="col-md-4">
    <h1 class="text-left"><%= @user.name %></h1>
    <div><b>Username:</b> <%= @user.username %></div>
    <div><b>Email:</b> <%= @user.email %></div>
    <div><b>Bio:</b> <%= @user.bio.blank? ? "None" : @user.bio %></div>
    <% if current_user == @user %>
      <div class="btn-group">
        <%= link_to "Add Trip", new_trip_path, class: "btn btn-primary" %>
        <%= link_to "Edit Profile", edit_me_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-5">
    <h1 class="text-left">Trips</h1>
    <div class="row">
      <% @user.trips.each_with_index do |trip, index| %>
        <% if (index % 3).zero? && !index.zero? %>
          </div><div class="row" style="margin-top: 30px;">
        <% end %>
        <div class="col-md-6">
          <%= link_to trip_path(trip.id) do %>
            <div><%= image_tag trip.images.first.try(:link), class: "img-responsive" %></div>
            <div class="text-center"><%= trip.name %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
