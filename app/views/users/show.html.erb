<div class="row">
  <div class="col-md-6">
    <%= image_tag @user.image.link, class: "profile-image" if @user.image %>
    <%= @user.name %> | 
    <%= @user.username %> | 
    <%= @user.email %>
  </div>
  <div class="col-md-6">
    <div>
      <% @user.trips.each do |trip| %>
        <span><%= link_to trip.name, trip_path(trip.id) %></span>
      <% end %>
    </div>
    <div>
      <% if current_user == @user %>
        <%= link_to "Add Trip", new_trip_path, class: "btn btn-primary" %>
        <%= link_to "Edit Profile", edit_me_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
