<% bootstrap_class = { success: "alert-success", error: "alert-danger", alert: "alert-danger", notice: "alert-success" } %>
<% flash.each do |msg_type, message| %>
  <div class="alert <%= bootstrap_class[msg_type.to_sym] %>">
    <%= message %>
    <button class="close" data-dismiss="alert">x</button>
  </div>
<% end %>
